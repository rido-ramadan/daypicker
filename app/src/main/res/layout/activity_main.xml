<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.edgardrake.libs.views.daypicker.DayPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:checked="true"
        app:locale="id"
        app:day="monday"
        app:dayFormat="shorthand"/>

    <com.edgardrake.libs.views.daypicker.WeeklyDayPicker
        android:id="@+id/weeklyDayPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:locale="id"
        app:dayFormat="shorthand"
        tools:days="friday|monday"/>

    <Button
        android:id="@+id/changeDaysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Change Days"/>

    <Button
        android:id="@+id/selectedDaysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Selected Days"/>

    <Button
        android:id="@+id/modeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Toggle Change Mode"/>

</LinearLayout>